---
import { Image } from "astro:assets";

type Props = {
	img: string;
	alt: string;
	title: string;
	description: string;
	className?: string;
};

const { img, alt, className, title, description } = Astro.props;
---

<div class:list={["space-y-[22px]", className]}>
	<Image src={img} alt={alt} width={335} height={177} />
	<div class="text-[21px]/[1] text-center space-y-[6px]">
		<b>{title}</b>
		<p>{description}</p>
	</div>
</div>
