---
import { Image } from "astro:assets";

type Props = {
	img: string;
	title: string;
};

const { img, title } = Astro.props;
---

<div class="flex flex-col gap-[10px]">
	<Image
		src={img}
		alt={title}
		width={200}
		height={200}
		class="aspect-square object-cover rounded-[4px]"
	/>
	<p class="text-base whitespace-pre-wrap">{title}</p>
</div>
